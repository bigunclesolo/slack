# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_APP_TOKEN=xapp-your-app-token-here
SLACK_SIGNING_SECRET=your-signing-secret-here

# GitHub Configuration
GITHUB_TOKEN=ghp_your-github-token-here
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# Transformer Models Configuration
TRANSFORMERS_CACHE_DIR=./models
USE_GPU_IF_AVAILABLE=true

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/slack_github_automation
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_RELOAD=false

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Application Configuration
APP_NAME=Slack-GitHub NLP Automation
APP_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Feature Flags
ENABLE_TRANSFORMERS=true
ENABLE_SPACY=true
ENABLE_CODE_GENERATION=true
ENABLE_AUTO_PR_CREATION=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# File Processing
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.java,.go,.rs,.cpp,.c,.h,.md,.txt,.json,.yaml,.yml

# NLP Settings
NLP_CONFIDENCE_THRESHOLD=0.7
USE_TRANSFORMERS_FOR_LOW_CONFIDENCE=true
INTENT_SIMILARITY_THRESHOLD=0.3

# Workflow Configuration
MAX_WORKFLOW_STEPS=20
WORKFLOW_TIMEOUT_MINUTES=30
MAX_CONCURRENT_WORKFLOWS=50

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
